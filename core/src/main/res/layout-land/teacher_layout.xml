<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/message_bottom_part"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/message"
        app:layout_constraintStart_toStartOf="@+id/rule_text"
        app:layout_constraintTop_toBottomOf="@+id/rule_text" />

    <ImageView
        android:id="@+id/teacher"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/teatcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rule_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/message_background"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:fontFamily="@font/inriasanslight"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:textAlignment="viewStart"
        android:textSize="5pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/start_button"
        app:layout_constraintStart_toEndOf="@+id/teacher" />

    <Button
        android:id="@+id/start_button"
        android:fontFamily="@font/inriasansbold"
        android:textColor="#FFF"
        android:backgroundTint="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/inriasansbold"
        android:text="@string/exit"
        android:textColor="#FFF"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/restart_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/restart_button"
        android:fontFamily="@font/inriasansbold"
        android:textColor="#FFF"
        android:visibility="gone"
        android:backgroundTint="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:text="@string/restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>