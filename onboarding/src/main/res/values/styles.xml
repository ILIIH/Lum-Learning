<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:fontFamily">@font/inriasansbold</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="rabbit_style">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="app_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inriasansbold</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>

    <style name="subtitle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:fontFamily">@font/inriasansbold</item>
    </style>

    <style name="menu_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/rounded_primary_background</item>
        <item name="android:fontFamily">@font/inriasansbold</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>
</resources>