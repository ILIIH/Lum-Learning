<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context=".fragments.RuleFragment.RuleFragment">

<TextView
    android:layout_marginTop="40dp"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text="Card creation rule:" />

<TextView
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:justificationMode="inter_word"
    android:layout_marginTop="120dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text="1) You open a new game to repeat information. You are shown a visual association for the answer, for a while \n2) For each question, a certain time is given, after which this question will not be counted\n3) When passing each of the questions, artificial intelligence learns from how you work and adjusts the program for you" />

<Button
    android:layout_marginTop="50dp"
    android:id="@+id/start_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="START" />
</LinearLayout>